{

	"manifest_version": 2,
	"name": "Mystique-FF",
	"version": "0.3",
	
	"permissions": [
  		"tabs",
		"storage",
		"webRequest",
		"webRequestBlocking",
		"http://useragentstring.com/*",
		"<all_urls>"
  	],
	
	"description": "Experimental browser plugin which should obscure browsing behaviour of its users - https://github.com/bensteUEM/mystique",

	"icons": {
		"48": "icons/DHBW_CAS_logo_blur-48.png",
		"96": "icons/DHBW_CAS_logo_blur-96.png"
	},
	
	"content_scripts": [{
		"matches": ["*://*.wiedenest.de/*"],
		"js": ["mystique.js"]
	}],
  	
  	"background": {
		"scripts": ["background.js"]
	},
	
	"browser_action": {
		"default_icon": "icons/DHBW_CAS_logo_blur-96.png"
	},
	
	"options_ui": {

  		"page": "mystique_settings.html"
  	}
}
